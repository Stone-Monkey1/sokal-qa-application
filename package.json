{
  "name": "sokal-qa-application",
  "version": "1.0.4",
  "description": "QA Testing App",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "clean": "sudo rm -rf out/ || sudo rm -rf out/",
    "make": "npm run clean && electron-forge make",
    "build-app": "cd frontend && npm run build && cd .. && npm run make"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "electron-log": "^5.3.2",
    "electron-updater": "^4.6.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0",
    "@electron-forge/maker-squirrel": "^6.0.0",
    "@electron-forge/maker-zip": "^6.0.0",
    "electron": "^35.0.2"
  },
  "build": {
    "appId": "com.yourcompany.qaapp",
    "productName": "QA Tester",
    "directories": {
      "output": "out"
    },
    "files": [
      "main.js",
      "backend/**",
      "docs/**",
      "node_modules/**",
      "nnode-bin/**"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": [
            "win32"
          ]
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Stone-Monkey1/sokal-qa-application.git"
  }
}
