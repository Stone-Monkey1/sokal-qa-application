{
  "name": "sokal-qa-application",
  "version": "1.1.2",
  "description": "QA Testing App",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "clean": "sudo rm -rf out/",
    "make": "npm run clean && electron-forge make",
    "build-app": "npm run clean && cd frontend && npm run build && cd .. && electron-builder",
    "publish-app": "electron-builder --publish=always"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "electron-log": "^5.3.2",
    "electron-updater": "^4.6.5",
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0",
    "@electron-forge/maker-squirrel": "^6.0.0",
    "@electron-forge/maker-zip": "^6.0.0",
    "@electron-forge/publisher-github": "^7.7.0",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.yourcompany.qaapp",
    "productName": "qaApp",
    "directories": {
      "output": "out"
    },
    "asar": true,
    "asarUnpack": [
      "backend/**",
      "node-bin/**",
      "node_modules/playwright/**"
    ],
    "files": [
      "main.js",
      "docs/**",
      "node_modules/**",
      "utility/**",
      "!frontend/",
      "!build/"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend/"
      },
      {
        "from": "node-bin/",
        "to": "node-bin/"
      }
    ],
    "mac": {
      "target": [
        "zip"
      ],
      "artifactName": "${productName}-${version}-${arch}.zip"
    },
    "icon": "assets/icon.icns"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icon.icns",
        "prune": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": [
            "win32"
          ]
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "Stone-Monkey1",
              "name": "sokal-qa-application"
            },
            "prerelease": false,
            "draft": false
          }
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Stone-Monkey1/sokal-qa-application.git"
  }
}
